{
    "compilerOptions": {
        "baseUrl": "src/",
        "target": "ES2017",
        "lib": ["dom", "dom.iterable"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "ES2022",
        "sourceMap": true,
        "moduleResolution": "node",
        "declaration": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "noEmit": false,
        "rootDirs": ["./src"],
        "outDir": "./dist",
        "types": ["node", "jest"],
        "paths": {
            "Utils/*": ["./utils/*"],
            "Core/*": ["./core/*"]
        },
        "jsx": "react-jsx"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
