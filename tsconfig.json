{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ES2017",
        "lib": ["dom", "dom.iterable"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "ES2022",
        "sourceMap": true,
        "moduleResolution": "node",
        "declaration": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "noEmit": false,
        "rootDirs": ["./src"],
        "outDir": "./dist",
        "types": ["node", "jest"],
        "paths": {
            "Utils/*": ["./src/utils/*"],
            "Core/*": ["./src/core/*"],
            "Components/*": ["./src/components/*"],
            "Hooks/*": ["./src/hooks/*"],
            "@/*": ["./src/*"]
        },
        "jsx": "react-jsx"
    },
    "include": ["src/*"],
    "exclude": ["node_modules", "dist"]
}
